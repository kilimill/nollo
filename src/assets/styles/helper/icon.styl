.icon
	// filter: invert(9%) sepia(16%) saturate(259%) hue-rotate(323deg) brightness(105%) contrast(90%);
	transition fill .3s, stroke .3s, filter .3s

	path,
	circle
		stroke $black

	&--def 
		width 24px
		height 24px

	&--small
		width 16px
		height 16px

	&_green
		filter: invert(57%) sepia(53%) saturate(1376%) hue-rotate(110deg) brightness(95%) contrast(95%);

	&_white
		filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(93deg) brightness(103%) contrast(103%);

	&_red
		filter: invert(77%) sepia(58%) saturate(6905%) hue-rotate(325deg) brightness(101%) contrast(96%);

	svg 
		transition fill .3s, stroke .3s, filter .3s