.calendar 
	position relative
	width 100%

	.icon {
		opacity .7
	}

body
	.calendar_white .dp__input 
		background-color #fff

	.dp__input:hover
		border-color transparent


	.calendar.error
		.dp__input 
			border-color #F72921
			background-color: #FFF2F7;

	// .dp__clear_icon
	.dp__clear_icon
		opacity 1
		width 24px
		height 24px
		stroke-width: 0px;
		padding 0
		opacity .6
		margin-right 24px
		path,
		circle
			stroke #a0a3bd

	.dp
		&__theme_light 
			--dp-background-color: #FFFFFF;
			--dp-text-color: #212121;
			--dp-hover-icon-color: #BFFDE3 ;
			--dp-hover-color: #E6FEF4;
			--dp-hover-text-color: #049A5B;
			--dp-hover-icon-color: #BFFDE3;
			--dp-primary-color: $green;

		&__today
			border none

		&__input
			height var(--heigth-elems)
			background-color #F5F5F5
			border 2px solid transparent
			border-radius var(--radius-def)
			padding-left 64px
			padding-top 22px
			padding-right 51px
			font-weight: 500;
			font-size: 16px;
			line-height: 20px;

			&:placeholder
				color #222222 !important

			&_icon
				margin-left 24px

		&__calendar
			&_header
				justify-content space-between
				position relative
				color $green
				text-transform capitalize
				opacity 0.5

				&_item
					display flex
					align-items center
					justify-content center

				&_separator
					display none

			&_item,
			&_header
				font-size 12px
				line-height 12px
				font-weight 500

			&_next
				margin-left 0

			&_wrap
				ff $inter

		&__menu
			border-radius var(--radius-def)
			border none
			padding 24px 24px 32px 24px
			box-shadow: 0px 15px 39px -31px rgba(0, 0, 0, 0.11);

		&__range_between
			background-color #E6FEF4

		&__range
			&_start,
			&_end
				border-radius var(--radius-8)

		&__month_year
			&_select
				font-weight 500
				font-size 16px
				line-height 20px
				margin-right 5px
				width auto
				text-transform capitalize

			&_row
				display flex
				justify-content center
				margin-bottom 24px

		&__cell_inner
			padding 10px

body {
  .dp__instance_calendar {

    .dp__instance_calendar {
      position relative
      
      .dp__month_year_col_nav {
        display inline-block
        top 6px
        position absolute
        right 0
      }

      &:first-child {
        margin-right 30px

        .dp__month_year_col_nav {
          left 0
          right auto
        }
      }

    }
  }
