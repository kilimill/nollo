.tags {
  width 100%;
  
  &__item {
    position relative
    display: inline-block
    margin-right: 16px;
    margin-bottom: 16px;
    padding: 8px 16px;
    border-radius: 24px;
    background-color: #fff;
    transition box-shadow .3s
    cursor pointer


    @media $desktop {
      &:hover {
        box-shadow: 0px 8px 16px -10px rgba(16, 59, 0, 0.24);
      }
    }

    &:first-child {
      margin-left: 0;
    }
  }

  &__label {
    display flex
    align-items center
  }

  &__input {
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    opacity 0
    cursor pointer
  }

  &__input:checked + .tags__label {
    box-shadow: 0px 8px 16px -10px rgba(16, 59, 0, 0.24);
    
    svg {
      filter: invert(57%) sepia(53%) saturate(1376%) hue-rotate(110deg) brightness(95%) contrast(95%);
    }
  }

  &__list {
    margin-right: -16px;
    margin-bottom: -16px;
  }
  
  &__service {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: -16px;

    @media $mobile {
      display: block;
    }

    &-item {
      display flex
      align-items center
      margin-right: var(--offset-mid);
      margin-bottom: 16px;

      @media $mobile {
        margin-right: 0;
      }

      &:last-child {
        margin-right 0
        
        @media $mobile {
          margin-bottom: 0;
        }
      }
    }
  }
}