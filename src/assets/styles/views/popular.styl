.popular
	&__item
		position relative
		display flex
		align-items flex-end
		overflow hidden
		transition background-size .3s

		&::before
			content ''
			position absolute
			width 100%
			height 100%
			bottom 0
			left 0
			z-index 1
			background: linear-gradient(180deg, rgba(0, 0, 0, 0) 43.75%, rgba(0, 0, 0, 0.72) 100%)


		&-img 
			position absolute
			left 0
			top 0
			width 100%
			height 100%
			object-fit cover
			object-position center
			transition transform .5s

		&-info
			position relative
			z-index 1
			color #fff